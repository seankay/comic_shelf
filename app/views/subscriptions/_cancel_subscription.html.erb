<%= form_for [current_store, current_store.subscription], url:main_app.store_subscription_path(current_store, current_store.subscription), method: :delete do |f| %>
  <%= f.submit t(:cancel_subscription), class: "button primary", id: "cancel_subscription", confirm: "Are you sure you want to cancel your subscription to #{current_store.subscription.plan.name}?" %>
<% end %>
